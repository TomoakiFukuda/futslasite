<% @event = Event.new unless @event %>
<% now = Time.zone.now %>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @event.errors.count %>件のエラー:</h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="form-group">
  イベント名
  <%= f.text_field :name, class: "form-control name-field" %>
  </div>
  <div class = "form-group">
  イベント画像
  <%= f.file_field :image, class: "form-control image-field" %>
  </div>

  <div class ="form-group">
  場所
  <%= f.text_field :place, class: "form-control email-field" %>
  </div>
  <div class ="form-group">
  開始
  <%= f.datetime_select :start_time %>
  </div>
  <div class ="form-group">
  終了
  <%= f.datetime_select :end_time %>
  </div>
  <div class ="form-group">
  コメント
  <%= f.text_area :content, class: "form-control name-field" %>
  </div>
  <%= f.submit "保存", { class: "btn primary-btn" } %>
  <% end %>